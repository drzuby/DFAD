<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/helloWorldTextView"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/helloWorldTextView"
        android:layout_marginTop="30dp"
        android:text="@string/x_acc_label" />

    <TextView
        android:id="@+id/yAcc"
        android:text="@string/y_acc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/helloWorldTextView"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/zAcc"
        android:text="@string/z_acc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/helloWorldTextView"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/xGyro"
        android:text="@string/x_gyro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="160dp" />

    <TextView
        android:id="@+id/yGyro"
        android:text="@string/y_gyro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="160dp" />

    <TextView
        android:id="@+id/zGyro"
        android:text="@string/z_gyro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="160dp" />

</RelativeLayout>